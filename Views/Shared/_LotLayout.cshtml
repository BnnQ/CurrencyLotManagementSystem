<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData[index: "Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Play">
    <link rel="stylesheet" href="~/scss/bootstrap.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="~/scss/site.css" asp-append-version="true"/>
    @await RenderSectionAsync(name: "Styles", required: false)
</head>
<body>
<header class="fixed-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid" style="padding: 32px">
            <a class="navbar-brand" asp-controller="Lot" asp-action="List" style="display: flex; align-items: center;">
                <img src="~/media/logo-white.png" alt="Logo" style="height: 200px;">
            </a>
            <a id="btn-log-out" asp-controller="Account" asp-action="Logout">
                <i class="fa fa-sign-out"></i>
                Log out
            </a>
        </div>
    </nav>
</header>
@RenderBody()
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync(name: "Scripts", required: false)
</body>
</html>